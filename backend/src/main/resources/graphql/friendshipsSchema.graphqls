extend type Mutation {
  sendFriendRequest(friendUsername: String!): Friendship!
  acceptFriendRequest(friendUsername: String!): Friendship!
  removeFriend(friendUsername: String!): Boolean!
}

type Friendship {
  user: User!
  friend: User!
  status: FriendshipStatus!
  createdAt: String!
}

enum FriendshipStatus {
  PENDING
  ACCEPTED
  BLOCKED
}
